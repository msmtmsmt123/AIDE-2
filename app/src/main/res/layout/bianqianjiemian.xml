<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/huangbai">
    <com.example.nianxin.gongjuxiang.my.TitleLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    </com.example.nianxin.gongjuxiang.my.TitleLayout>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="5dp"
        android:background="@null"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="18dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginBottom="20dp"
        android:background="@xml/bianqianjiemian_shap"

        >
<ScrollView
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true">
    <com.example.nianxin.gongjuxiang.my.MyMultiLineEditText
        android:id="@+id/edittext1"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="0dp"
        android:lineSpacingMultiplier="1"
        android:gravity="top"
        android:lineSpacingExtra="1dp"
        android:textCursorDrawable="@xml/color_cursor"
        android:textSize="18sp"
        android:textColor="@color/qianzhong"
        android:background="@null"
        android:singleLine="false"
        />
</ScrollView>


    </LinearLayout>

</LinearLayout>
