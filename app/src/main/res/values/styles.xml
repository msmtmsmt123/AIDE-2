<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/qianbai</item>
        <item name="colorPrimaryDark">@color/qianbai</item>
        <item name="colorAccent">#FF9D9E9D</item>
        <item name="overlapAnchor">false</item>
    </style>
    <style name="OverFlowMenuTheme" parent="Theme.AppCompat.NoActionBar">
        <!-- 设置Menu菜单的背景色 -->
        <item name="android:itemBackground">@color/qianbai</item>
        <!-- 设置Menu菜单的字体颜色 -->
        <item name="android:textColorPrimary">@android:color/black</item>
        <!-- 设置Menu窗口不覆盖Toolbar视图 -->
        <item name="overlapAnchor">false</item>
    </style>

    <style name="zwText">
        <item name="android:textSize">22sp</item>
        <item name="android:layout_marginLeft">20dp</item>
        <item name="android:layout_marginTop">3dp</item>
        <item name="android:textColor">@color/zhongse</item>
    </style>

    <style name="btText">
        <item name="android:layout_gravity">center</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/btText</item>
    </style>

    <style name="bianqianText">
        <item name="android:textSize">18sp</item>
        <item name="android:layout_marginLeft">50dp</item>
        <item name="android:layout_marginTop">3dp</item>
        <item name="android:textColor">@color/huabai</item>
    </style>

    <style name="jisuanqi">
        <item name="android:textSize">40dp</item>
    </style>

    <style name="myschedule_current_month_tv">
        <item name="android:textColor">#000000</item>
        <item name="android:textSize">30sp</item>
    </style>
    <!--2、设置透明Theme-->
    <style name="Theme.AppStartLoadTranslucent" parent="android:Theme">
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowNoTitle">true</item>
    </style>
</resources>
