<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_pressed="true"><shape>
            <solid android:color="#FF584D2D" />
            <!-- 点击后描边 -->
            <stroke android:width="0.5dp" android:color="#FF9C8E56" />
            <!-- 点击后圆角 -->
            <corners android:radius="100dip" />
        </shape></item>
        
    
    
    <item android:state_focused="true"><shape>
            <stroke android:width="1dp" android:color="#FF584D2D" />

            <corners android:radius="0dp" />
        </shape></item>
    <item><shape>
        <!--<点击前颜色>-->
            <solid android:color="#FF9C8E56" />
<!--点击前描边-->
            <stroke android:width="1dp" android:color="#FF9C8E56" />
<!--点击前圆角-->
            <corners android:radius="5dip" />
        </shape></item>
        
    
    
     <item><shape>   
    <padding 
   android:left="5dp" 
   android:top="5dp" 
   android:right="5dp" 
   android:bottom="5dp" 
/>
     </shape></item> 

</selector>